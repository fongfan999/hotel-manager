<%= simple_form_for receipt do |f| %>
	<%= f.association :customer, include_blank: false, 
		collection: receipt.id.nil? ? Customer.available_customer : receipt.customer.available_customer %>
	<%= f.association :room, include_blank: false,
		collection: receipt.id.nil? ? Room.available_room : receipt.room.available_room %>
	<%= f.input :quantity %>

	<%= f.button :submit, class: "btn-success" %>
<% end %>