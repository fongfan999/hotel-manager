<%= simple_form_for customer do |f| %>
	<%= f.input :name %>
	<%= f.input :identity_card %>
	<% admins_only do %>
		<%= f.association :type, label_method: :to_label, include_blank: false %>
	<% end %>
	<%= f.input :phone_number %>
	<%= f.input :address %>

	<%= f.button :submit, value: "Update" , class: "btn-success" %>
<% end %>