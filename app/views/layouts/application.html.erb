<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Hotel Manager" %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
    <div class="container topnav">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand topnav" href="/">Hotel Manager</a>
      </div>
      
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
        	<li class=<%= "active" if current_page?("/") %>>
        		<%= link_to "Home", root_path %>
        	</li>
        	<li class=<%= "active" if current_page?("rooms") %>>
						<%= link_to "Room", rooms_path %>
        	</li>
          <li class=<%= "active" if current_page?("bills") %>>
            <%= link_to "Bill", bills_path %>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Services", services_path %></li>
              <li class=<%= "active" if current_page?("customers") %>>
                <%= link_to "Customer", customers_path %>
              </li>
              <li class=<%= "active" if current_page?("receipts") %>>
                <%= link_to "Receipt", receipts_path %>
              </li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Account
            <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li class="navbar-text page-header">
                Signed in as <%= current_user.email %>
              </li>
              <li>
                <%= link_to "Edit", edit_user_registration_path %>
              </li>
              <li>
                  <%= link_to "Log out", destroy_user_session_path,
                    method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
            <li class=<%= "active" if current_page?("users/sign_in") %>>
              <%= link_to "Sign in", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

<div class=<%= "container" unless current_page?("/") %>>
	<% flash.each do |key, message| %>
		<div class="alert alert-<%= key %> fade in">

			<a href="#" class="close" data-dismiss="alert" aria-label="close">
				&times;
			</a>
			<%= message %>
		</div>
	<% end %>
	<%= yield %>
</div>

</body>
</html>
